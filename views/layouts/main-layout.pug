        link(rel='preconnect', href='https://fonts.gstatic.com', crossorigin='')
        link(href='https://fonts.googleapis.com/css2?family=Playpen+Sans:wght@100..800&family=Shantell+Sans:ital,wght@0,300..800;1,300..800&family=Source+Sans+3:ital,wght@0,200..900;1,200..900&display=swap', rel='stylesheet')


    body 
        script.
            var userLoggedIn = !{userLoggedInJs};
        .wrapper
            .row
                nav.col-2
                nav.col-2.fixed-top
                    a.blue(href="/") 
                        i.fa-solid.fa-cat
                    a(href="/")
                        i.fa-regular.fa-newspaper
                    a(href="/search")
                        i.fas.fa-search
                    a(href="/notification")
                        i.fa-regular.fa-bell
                    a(href="/message")
                        i.fa-regular.fa-envelope
                    a(href="/profile")
                        i.fa-regular.fa-user
                    a(href="/auth/logout")
                        i.fa-solid.fa-person-walking-luggage
                .mainSectionContainer.col-10.col-md-8.col-lg-6
                    .titleContainer
                        h1 #{pageTitle}
                        block headerButton

                    block content 

                .d-none.d-md-block.col-md-2.col-lg-4.trend
        #notificationList

        script(src='https://code.jquery.com/jquery-3.5.1.min.js', integrity='sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=', crossorigin='anonymous')
        script(src='https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.6.2/cropper.min.js', defer)
        script(src='https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js', integrity='sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo', crossorigin='anonymous', defer)
        script(src='https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js', integrity='sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6', crossorigin='anonymous', defer)
        script(src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js", defer)
        script(src='https://cdn.socket.io/4.7.5/socket.io.min.js', integrity='sha384-2huaZvOR9iDzHqslqwpR87isEmrfxqyWOF7hr7BY6KG0+hVKLoEXMPUJw3ynWuhO', crossorigin='anonymous', defer)
        
        block scripts
        
        script(src="/js/common.js", defer)
        script(src="/js/clientSocket.js", defer)